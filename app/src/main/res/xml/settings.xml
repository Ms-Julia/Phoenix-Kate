    <PreferenceCategory
        android:title="@string/custom_chat"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:defaultValue="false"
            android:key="smooth_chat"
            android:summary="@string/smooth_chat_summary"
            android:title="@string/smooth_chat"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/array_chat_background_names"
            android:entryValues="@array/array_chat_background_items"
            android:key="chat_background"
            android:title="@string/chat_background"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <Preference
            android:key="chat_light_background"
            android:title="@string/chat_light_background"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="chat_dark_background"
            android:title="@string/chat_dark_background"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="reset_chat_background"
            android:title="@string/delete_chats_photo"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="custom_chat_color_usage"
            android:summary="@string/custom_chat_color_summary"
            android:title="@string/use_custom_chat_color"
            app:allowDividerAbove="true"
            app:iconSpaceReserved="false" />

        <biz.dealnote.messenger.colorpicker.ColorPickerPreference
            android:dependency="custom_chat_color_usage"
            android:key="custom_chat_color"
            android:title="@string/custom_chat_color"
            app:alphaSlider="true"
            app:density="12"
            app:iconSpaceReserved="false"
            app:initialColor="#ffffffff"
            app:lightnessSlider="true"
            app:pickerButtonCancel="@string/button_cancel"
            app:pickerButtonOk="@string/button_yes"
            app:pickerTitle="@string/custom_chat_color" />

        <biz.dealnote.messenger.colorpicker.ColorPickerPreference
            android:dependency="custom_chat_color_usage"
            android:key="custom_chat_color_second"
            android:title="@string/custom_chat_color_second"
            app:alphaSlider="true"
            app:density="12"
            app:iconSpaceReserved="false"
            app:initialColor="#ffffffff"
            app:lightnessSlider="true"
            app:pickerButtonCancel="@string/button_cancel"
            app:pickerButtonOk="@string/button_yes"
            app:pickerTitle="@string/custom_chat_color_second" />

        <SwitchPreference
            android:defaultValue="false"
            android:disableDependentsState="true"
            android:key="my_message_no_color"
            android:title="@string/my_message_no_color"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:defaultValue="false"
            android:dependency="my_message_no_color"
            android:key="custom_message_color_usage"
            android:title="@string/usage_custom_message_color"
            app:iconSpaceReserved="false" />

        <biz.dealnote.messenger.colorpicker.ColorPickerPreference
            android:dependency="custom_message_color_usage"
            android:key="custom_message_color"
            android:title="@string/custom_message_color"
            app:alphaSlider="true"
            app:density="12"
            app:iconSpaceReserved="false"
            app:initialColor="#CBD438FF"
            app:lightnessSlider="true"
            app:pickerButtonCancel="@string/button_cancel"
            app:pickerButtonOk="@string/button_yes"
            app:pickerTitle="@string/custom_message_color" />

        <biz.dealnote.messenger.colorpicker.ColorPickerPreference
            android:dependency="custom_message_color_usage"
            android:key="custom_second_message_color"
            android:title="@string/custom_second_message_color"
            app:alphaSlider="true"
            app:density="12"
            app:iconSpaceReserved="false"
            app:initialColor="#BF6539DF"
            app:lightnessSlider="true"
            app:pickerButtonCancel="@string/button_cancel"
            app:pickerButtonOk="@string/button_yes"
            app:pickerTitle="@string/custom_second_message_color" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="disable_encryption"
            android:title="@string/disable_encryption"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="display_writing"
            android:title="@string/display_writing"
            app:iconSpaceReserved="false" />

