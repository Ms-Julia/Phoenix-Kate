    <PreferenceCategory
        android:title="@string/input"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:defaultValue="false"
            android:key="emojis_type"
            android:title="@string/emojis_type_title"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="emojis_full_screen"
            android:title="@string/emojis_full_screen"
            app:iconSpaceReserved="false" />

        <SwitchPreference
